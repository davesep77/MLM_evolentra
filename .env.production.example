# ===================================
# EVOLENTRA PRODUCTION ENVIRONMENT
# ===================================
# Copy this file and configure in DigitalOcean App Platform Dashboard
# DO NOT commit actual values to Git!

# -----------------------------------
# APPLICATION SETTINGS
# -----------------------------------
APP_ENV=production
APP_URL=https://your-app.ondigitalocean.app
APP_DEBUG=false

# -----------------------------------
# DATABASE CONFIGURATION
# -----------------------------------
# These will be auto-populated by DigitalOcean from the managed database
# Format: mysql://username:password@host:port/database
DATABASE_URL=${DATABASE_URL}

# Alternative individual variables (if not using DATABASE_URL)
DB_HOST=${evolentra-db.HOSTNAME}
DB_PORT=${evolentra-db.PORT}
DB_NAME=${evolentra-db.DATABASE}
DB_USER=${evolentra-db.USERNAME}
DB_PASSWORD=${evolentra-db.PASSWORD}

# -----------------------------------
# BINANCE PAY API CONFIGURATION
# -----------------------------------
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_ENVIRONMENT=production
# Options: production, sandbox

# -----------------------------------
# TELEGRAM BOT CONFIGURATION
# -----------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=${APP_URL}/telegram_webhook.php

# -----------------------------------
# BINANCE SMART CHAIN (BSC) / WEB3
# -----------------------------------
BSC_NETWORK=mainnet
# Options: mainnet, testnet

BSC_MAINNET_RPC=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545

# Contract address (after deployment)
CONTRACT_ADDRESS=your_contract_address_here

# Private key for contract interactions (KEEP SECURE!)
PRIVATE_KEY=your_private_key_here

# BscScan API Key for verification
BSCSCAN_API_KEY=your_bscscan_api_key_here

# -----------------------------------
# WEBHOOK ENDPOINTS
# -----------------------------------
BINANCE_WEBHOOK_URL=${APP_URL}/api/binance_pay_webhook.php
BLOCKCHAIN_WEBHOOK_URL=${APP_URL}/api/blockchain_webhook.php

# -----------------------------------
# SESSION & SECURITY
# -----------------------------------
SESSION_SECRET=generate_random_32_character_string_here
SESSION_LIFETIME=7200
# Session lifetime in seconds (7200 = 2 hours)

# -----------------------------------
# EMAIL CONFIGURATION (if using)
# -----------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@evolentra.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_EMAIL=noreply@evolentra.com
SMTP_FROM_NAME=Evolentra Platform

# -----------------------------------
# ADMIN CONFIGURATION
# -----------------------------------
ADMIN_EMAIL=admin@evolentra.com
SUPPORT_EMAIL=support@evolentra.com

# -----------------------------------
# PAYMENT SETTINGS
# -----------------------------------
WITHDRAWAL_FEE_PERCENTAGE=2.5
MIN_WITHDRAWAL_AMOUNT=50
USDT_CONTRACT_ADDRESS=0x55d398326f99059fF775485246999027B3197955
# USDT BEP20 contract on BSC mainnet

# -----------------------------------
# CRON JOB SETTINGS
# -----------------------------------
CRON_SECRET_KEY=generate_random_secret_for_cron_jobs
# Use this to secure cron endpoints

# -----------------------------------
# LOGGING & MONITORING
# -----------------------------------
LOG_LEVEL=error
# Options: debug, info, warning, error

ERROR_REPORTING=false
# Set to true only for debugging

# -----------------------------------
# RATE LIMITING
# -----------------------------------
API_RATE_LIMIT=100
# Requests per minute per IP

# -----------------------------------
# FEATURE FLAGS
# -----------------------------------
ENABLE_BINANCE_PAY=true
ENABLE_WEB3_WALLETS=true
ENABLE_TELEGRAM_BOT=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_BINARY_TREE=true
